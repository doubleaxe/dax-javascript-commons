{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./types",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmitOnError": false,
    "module": "nodenext",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.js"],
  "exclude": ["**/node_modules/**", "**/*.d.ts"]
}
